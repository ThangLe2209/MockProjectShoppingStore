@model IEnumerable<UserDto>
@{
    ViewData["title"] = "User Listed";
}
<h3>List User</h3>
<a asp-action="Create" asp-controller="User">Add User</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">User Name</th>
            <th scope="col">User Email</th>
            <th scope="col">User Role</th>
            <th scope="col">User Status</th>
            <th scope="col">User Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@item.UserRole.Value</td>
                <td>
                    @if (@item.Active == true)
                    {
                        <span class="text text-success">@Html.Raw("Active")</span>
                    }
                    else
                    {
                        <span class="text text-danger">@Html.Raw("Not Active")</span>
                    }
                </td>
                <td>
                    @if (@item.Active == false) {
                        <a class="btn btn-warning btn-sm" asp-action="ActiveAccount" asp-controller="User" asp-route-id="@item.Id">Active</a>
                    }
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>