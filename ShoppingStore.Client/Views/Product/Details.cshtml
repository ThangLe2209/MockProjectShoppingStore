            <h2 class="title text-center">Related Products</h2>

            <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="item active">
                        @foreach (var relatedProduct in @ViewBag.RelatedProducts as IEnumerable<ProductDto>)
                        {
                            <div class="col-sm-4">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <a asp-action="Details" asp-controller="Product" asp-route-id="@relatedProduct.Id">
                                                @* <img src="~/media/products/@relatedProduct.Image" alt="@relatedProduct.Name" height="210px" /> *@
                                                <img src="@(backendApiImagePath + @relatedProduct.Image)" alt="@relatedProduct.Name" height="210px" />
                                                <h2>@relatedProduct.Price $</h2>
                                                <p>@relatedProduct.Name</p>
                                                <p>Category: @relatedProduct.Category?.Name</p>
                                                <p>Brand: @relatedProduct.Brand?.Name</p>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    @for (int index = 0; index < ViewBag.relatedProductsAnotherPage.Count; index++)
                    {
                        var item = ViewBag.relatedProductsAnotherPage as Dictionary<int, IEnumerable<ProductDto>>;
                        var item1 = item.ElementAt(index);
                        var relatedProduct1 = item1.Value;
                        <div class="item">
                            @foreach (var relatedProduct in relatedProduct1 as IEnumerable<ProductDto>)
                            {
                                @* <div>Page @index</div> *@
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <a asp-action="Details" asp-controller="Product" asp-route-id="@relatedProduct.Id">
                                                    @* <img src="~/media/products/@relatedProduct.Image" alt="@relatedProduct.Name" height="210px" /> *@
                                                    <img src="@(backendApiImagePath + @relatedProduct.Image)" alt="@relatedProduct.Name" height="210px" />
                                                    <h2>@relatedProduct.Price $</h2>
                                                    <p>@relatedProduct.Name</p>
                                                    <p>Category: @relatedProduct.Category?.Name</p>
                                                    <p>Brand: @relatedProduct.Brand?.Name</p>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
