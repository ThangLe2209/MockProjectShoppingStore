            $('.add-btn-compare').click(function (e) {
                e.preventDefault();
                var Id = $(this).data()["productId"];

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("AddCompare", "Home")",
                    data: { Id: Id },
                    success: function (result) {
                        // console.log(result);
                        if (result.success) {
                            // window.location.href = result.redirectToUrl;
                            window.location.href = window.location.href;
