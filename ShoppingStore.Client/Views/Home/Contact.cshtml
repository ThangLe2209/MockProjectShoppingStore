@model ContactDto
<h4>Contact Information For Our Store</h4>

<div class="row">
    <div id="fb-root"></div>
    <div class="col-sm-5 col-md-5">
        @Html.Raw(Model.Map)
        <div style="text-align: justify">
        @Html.Raw(Model.Description)
        </div>
    </div>
    <div class="col-sm-4">
        <div class="address">
            <h5>Name: @Model.Name</h5>
            <h5>Email: @Model.Email</h5>
            <h5>Phone: @Model.Phone</h5>
        </div>
        @* https://developers.facebook.com/docs/plugins/page-plugin/ *@
        <div class="fb-page" 
        data-href="https://www.facebook.com/facebook"
        data-tabs="message" data-width="" data-height="" 
        data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
        <blockquote cite="https://www.facebook.com/facebook" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/facebook">Facebook</a></blockquote></div>
    </div>
</div>

@section Scripts {
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v21.0"></script>
}

