@page
@model Thang.IDP.Pages.User.ResetPassword.IndexModel
@{

    <div>
        @*<div class="page-header">
    <h1>User Forget Password</h1>
    </div>*@

        <partial name="_ValidationSummary" />

        <div class="row">
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">User Reset Password</h3>
                    </div>
                    <div class="panel-body">
                        <form asp-route="Login">
                            <input type="hidden" asp-for="Input.ReturnUrl" />
                            <input type="hidden" asp-for="Input.SecurityCode" />
                            <input type="hidden" asp-for="Input.UserEmail" />
                            <fieldset>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control" asp-for="Input.UserEmail" disabled>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.NewPassword"></label>
                                    <input type="password" class="form-control" placeholder="Password"
                                           asp-for="Input.NewPassword" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary">Send</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {

}
