                                <div class="form-group">
                                    <label asp-for="Input.Email"></label>
                                    <input class="form-control" placeholder="Email" asp-for="Input.Email">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary">Send</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

